{
  "$schema": "https://railway.app/schema.json",
  "name": "price-aggregator-api",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicy": "on-failure",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "sleep": 10
  },
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}
